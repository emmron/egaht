<template>
  <div class="counter">
    <h2>Count: {count}</h2>
    <button @click="increment">+</button>
    <button @click="decrement">-</button>
  </div>
</template>

<script>
  let count = 0
  
  function increment() {
    count++
  }
  
  function decrement() {
    count--
  }
</script>

<style>
  .counter {
    margin: 2rem 0;
  }
  
  button {
    margin: 0 0.5rem;
    padding: 0.5rem 1rem;
    font-size: 1rem;
    cursor: pointer;
    border: 1px solid #ddd;
    background: #f9f9f9;
    border-radius: 4px;
  }
  
  button:hover {
    background: #e9e9e9;
  }
</style>