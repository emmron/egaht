{
  "name": "@eghact/ecommerce",
  "version": "1.0.0",
  "description": "Complete e-commerce solution with zero runtime overhead",
  "main": "package.egh",
  "type": "component-library",
  "runtime": "eghact",
  "exports": {
    ".": "./package.egh",
    "./cart": "./package.egh#CartStore",
    "./product": "./package.egh#ProductCard",
    "./checkout": "./package.egh#CheckoutForm",
    "./filters": "./package.egh#ProductFilters"
  },
  "keywords": ["ecommerce", "shopping", "cart", "checkout", "store"],
  "performance": {
    "bundleSize": "0KB",
    "runtime": "0ms",
    "compileTime": "< 50ms"
  },
  "features": [
    "Complete shopping cart management",
    "Product catalog with variants",
    "Multi-step checkout process",
    "Advanced filtering and search",
    "Wishlist functionality",
    "Order management",
    "Payment integration ready",
    "Zero JavaScript runtime"
  ],
  "dependencies": {
    "@eghact/forms": "^1.0.0",
    "@eghact/validation": "^1.0.0"
  },
  "engines": {
    "eghact": ">=1.0.0"
  }
}